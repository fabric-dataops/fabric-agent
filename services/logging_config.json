{
	"version": 1,
	"formatters": {
		"standard": {
			"format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
			"datefmt": "%Y-%m-%d %H:%M:%S"
		}
	},
	"handlers": {
		"console": {
			"class": "logging.StreamHandler",
			"formatter": "standard",
			"stream": "ext://sys.stdout",
			"level": "DEBUG"
		},
		"rotating_file": {
			"class": "logging.handlers.RotatingFileHandler",
			"formatter": "standard",
			"level": "DEBUG",
			"filename": "./Logs/cloud_logger.log",
			"maxBytes": 5000,
			"backupCount": 5,
			"encoding": "utf-8"
		}
	},
	"loggers": {
		"root": {
			"handlers": ["console", "rotating_file"],
			"propagate": 1,
			"level": "DEBUG"
		}
	}
}
